{
  "compilerOptions": {
    "jsx": "react-jsx",              // or "preserve" or "react" depending on your React version
    "allowJs": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  }
}
